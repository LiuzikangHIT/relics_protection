.page-header {
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: #220808;
}
.exhibit-image {
  width: 100%;
  position: relative;
  margin: 120rpx 0;
}
.back-icon {
  position: absolute;
  padding-left: 20rpx;
}
.page-body {
  flex: 1;
  background-color: #F5EDE3;
  border-top-left-radius: 50rpx;
  border-top-right-radius: 50rpx;
  margin-top: -60rpx;
  padding: 20rpx;
}
.exhibit-info {
  margin-top: 20rpx;
}
.exhibit-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.exhibit-dynasty, 
.exhibit-unearthedTime, 
.exhibit-unearthedPlace, 
.exhibit-specification {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 10rpx;
}
.exhibit-description {
  text-indent: 2em;
  font-size: 30rpx;
  margin-top: 20rpx;
}
.audio-button, .tip-button {
  margin-top: 30rpx;
  background-color: #722F37;
  color: white;
}
.tip-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}
.tip-content {
  width: 80%;
  background-color: white;
  border-radius: 10rpx;
  padding: 30rpx;
}
.tip-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.tip-text {
  font-size: 28rpx;
  margin-bottom: 30rpx;
}
.close-button {
  background-color: #722F37;
  color: white;
}